---
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <main class="container flex-1 mx-auto p-4 md:px-0">
    <!-- 最新文章區塊 -->
    <section class="mb-12">
      <h2 class="section-title">最新文章</h2>
      <div class="space-y-4">
        <!-- 這裡會動態載入最新文章 -->
        <article class="post-card">
          <h3 class="post-title">文章標題</h3>
          <div class="post-meta">
            <span>2024-03-20</span>
            <span class="mx-2">•</span>
            <span>10 分鐘閱讀</span>
          </div>
        </article>
        <!-- 更多文章 -->
      </div>
    </section>
  </main>
</DefaultLayout>
